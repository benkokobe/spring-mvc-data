<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
   
    
    <!-- service -->
    <bean id="deploymentRequestService" class="org.bko.report.service.DeploymentRequestServiceImpl">
		<property name="deploymentRequestDao" ref="deploymentRequestDao"/>
	</bean>
	<bean id="patchService" class="org.bko.report.service.PatchServiceImpl">
		<property name="patchDao" ref="patchDao"/>
	</bean>
	<bean id="patchTaskService" class="org.bko.report.service.PatchTaskServiceImpl">
		<property name="patchTaskDao" ref="patchTask"/>
	</bean>
	
	
	<!-- Persistence -->
	<bean id="deploymentRequestDao" class="org.bko.report.persistence.DeploymentRequestDaoImpl">
		<property name="dataSource" ref="dataSourcePND"/>
	</bean>
	<bean id="patchDao" class="org.bko.report.persistence.PatchDaoImpl">
		<property name="dataSource" ref="dataSourcePND"/>
	</bean>
	<bean id="patchTask" class="org.bko.report.persistence.PatchTaskDaoImpl">
		<property name="dataSource" ref="dataSourcePND"/>
	</bean>
	
</beans>
